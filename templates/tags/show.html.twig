{% extends 'base.html.twig' %}

{% block title %}Tags{% endblock %}

{% block body %}
    <h1>Tags</h1>
    {% if is_granted('ROLE_EDITOR') %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tag.name }}</td>
            </tr>
            <tr>
                <th>Creation_date</th>
                <td>{{ tag.creationDate ? tag.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    {% endif %}
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('tags_index') }}">back to list</a>

    <a href="{{ path('tags_edit', {'id': tag.id}) }}">edit</a>

    {{ include('tags/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
