{% extends 'base.html.twig' %}

{% block title %}Author{% endblock %}

{% block body %}
    <div id="service" class="section-padding">
        <div class="container">
            <div class="row">
                <div class="page-title text-center">
                    <h1>Author Profile</h1>
                    <hr class="pg-titl-bdr-btm"/>
                </div>
                <div class="col-md-4">
                    <div class="service-box">
                        <div class="service-icon"><i class="fa fa-picture-o"></i></div>
                        <div class="service-text">
                            <h3>Name</h3>
                            <p>{{ author.firstName }} {{ author.lastName }} </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="service-box">
                        <div class="service-icon"><i class="fa fa fa-code"></i></div>
                        <div class="service-text">
                            <h3>Email</h3>
                            <p>{{ author.email }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="service-box">
                        <div class="service-icon"><i class="fa fa-diamond"></i></div>
                        <div class="service-text">
                            <h3>About the author</h3>
                            <p>{{ author.intro }}</p>
                        </div>
                    </div>
                </div>
                {% if is_granted('ROLE_ADMIN') %}
                <div class="col-md-4">
                    <div class="service-box">
                        <div class="service-icon"><i class="fa fa-diamond"></i></div>
                        <div class="service-text">
                            <h3>Registration date</h3>
                            <p>{{ author.registeredDate ? author.registeredDate|date('Y-m-d H:i:s') : '' }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="service-box">
                        <div class="service-icon"><i class="fa fa-diamond"></i></div>
                        <div class="service-text">
                            <h3>Last login</h3>
                            <p>{{ author.lastLogin ? author.lastLogin|date('Y-m-d H:i:s') : '' }}</p>
                        </div>
                    </div>
                </div>
                {% endif%}
            </div>
        </div>
    </div>
    <a href="{{ path('author_index') }}">back to list</a>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('author_edit', {'id': author.id}) }}">edit</a>

    {{ include('author/_delete_form.html.twig') }}
    {% endif%}
{% endblock %}
